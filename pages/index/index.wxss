/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.subtitle {
  font-size: 32rpx;
  margin-bottom: 80rpx;
  opacity: 0.9;
}

.start-btn {
  background: #ff6b6b;
  color: white;
  padding: 30rpx 80rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 107, 0.4);
}

.high-score {
  position: absolute;
  bottom: 100rpx;
  font-size: 28rpx;
  opacity: 0.8;
}