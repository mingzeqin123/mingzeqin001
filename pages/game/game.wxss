/* pages/game/game.wxss */
.game-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.game-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 游戏UI */
.game-ui {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
  pointer-events: none;
}

.score-panel {
  position: absolute;
  top: 80rpx;
  left: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  color: white;
}

.score-label {
  font-size: 24rpx;
  display: block;
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
}

.best-score-panel {
  position: absolute;
  top: 80rpx;
  right: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  color: white;
  text-align: right;
}

.best-score-label {
  font-size: 24rpx;
  display: block;
}

.best-score-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  color: #ffd700;
}

/* 开始界面 */
.start-screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.8);
  z-index: 100;
}

.game-title {
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 40rpx;
  text-shadow: 0 0 20rpx rgba(255, 255, 255, 0.5);
}

.game-subtitle {
  font-size: 32rpx;
  color: #ccc;
  margin-bottom: 80rpx;
}

.start-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  border-radius: 50rpx;
  border: none;
  padding: 30rpx 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.3);
  margin-bottom: 30rpx;
}

.tool-btn {
  background: linear-gradient(45deg, #007aff, #5ac8fa);
  color: white;
  border-radius: 50rpx;
  border: none;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
}

/* 游戏结束界面 */
.game-over-screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.9);
  z-index: 100;
}

.game-over-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 40rpx;
}

.final-score {
  font-size: 40rpx;
  color: white;
  margin-bottom: 20rpx;
}

.best-score-display {
  font-size: 32rpx;
  color: #ffd700;
  margin-bottom: 60rpx;
}

.restart-btn, .share-btn {
  background: linear-gradient(45deg, #4ecdc4, #44a08d);
  color: white;
  border-radius: 50rpx;
  border: none;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 15rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
}

.share-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
}

/* 蓄力指示器 */
.power-indicator {
  position: absolute;
  right: 40rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 20;
}

.power-bar {
  width: 20rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.power-fill {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: linear-gradient(to top, #ff6b6b, #ffd700);
  border-radius: 10rpx;
  transition: height 0.1s ease;
}

.power-text {
  color: white;
  font-size: 24rpx;
  margin-top: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

/* 操作提示 */
.hint {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  z-index: 20;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}