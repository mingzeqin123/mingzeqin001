/* pages/watermark/watermark.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.header-content {
  text-align: left;
}

.header-nav {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  text-decoration: none;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 模式切换 */
.mode-switch {
  display: flex;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 15rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.mode-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 0 5rpx;
  background: transparent;
  border: none;
  color: #666;
  transition: all 0.3s;
}

.mode-btn.active {
  background: #667eea;
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

/* 通用section样式 */
.section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 图片选择器 */
.image-selector {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: all 0.3s;
}

.image-selector:active {
  transform: scale(0.98);
}

.selected-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 13rpx;
}

.select-placeholder {
  text-align: center;
  color: #999;
}

.select-placeholder text:first-child {
  display: block;
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.select-placeholder text:last-child {
  font-size: 28rpx;
}

/* 批量图片 */
.batch-images {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.batch-image-item {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.batch-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.add-more-btn {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #999;
}

/* 进度条 */
.progress {
  margin-top: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 处理结果 */
.result-container {
  text-align: center;
}

.processed-image {
  width: 100%;
  max-height: 400rpx;
  object-fit: contain;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.save-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #52c41a;
  color: white;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

/* 单选组 */
.radio-group {
  display: flex;
  gap: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.radio-item radio {
  margin-right: 10rpx;
}

/* 配置项 */
.config-item {
  margin-bottom: 30rpx;
}

.config-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.config-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.config-input:focus {
  border-color: #667eea;
  background: white;
}

.color-input {
  width: 200rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  background: #fafafa;
  font-size: 28rpx;
}

/* 水印图片选择器 */
.watermark-image-selector {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.watermark-image-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.watermark-placeholder {
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

/* 滑块样式 */
slider {
  margin-top: 20rpx;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary[disabled] {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

.action-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #e8e8e8;
}

.action-btn.secondary:active {
  background: #f5f5f5;
}

/* 隐藏的canvas */
.watermark-canvas {
  width: 1px;
  height: 1px;
  position: absolute;
  top: -9999px;
  left: -9999px;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 15rpx;
  }
  
  .batch-image-item,
  .add-more-btn {
    width: 120rpx;
    height: 120rpx;
  }
  
  .actions {
    flex-direction: column;
  }
  
  .action-btn {
    width: 100%;
  }
}