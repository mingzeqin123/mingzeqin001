/* watermark.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 图片区域 */
.image-section {
  margin-bottom: 30rpx;
}

.image-upload {
  height: 400rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  color: #999;
  font-size: 28rpx;
}

.image-preview {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.preview-img {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.image-info {
  margin-top: 20rpx;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}

/* 控制按钮 */
.control-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-success {
  background-color: #34c759;
  color: white;
}

.btn-secondary {
  background-color: #8e8e93;
  color: white;
}

.btn-warning {
  background-color: #ff9500;
  color: white;
}

.btn:disabled {
  opacity: 0.6;
}

/* 配置面板 */
.config-panel {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.config-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.config-group {
  margin-bottom: 30rpx;
}

.config-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.config-input {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.config-slider {
  width: 100%;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  gap: 15rpx;
}

.type-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fff;
  color: #666;
  font-size: 24rpx;
}

.type-btn.active {
  background-color: #007aff;
  color: white;
  border-color: #007aff;
}

/* 位置输入 */
.position-inputs {
  display: flex;
  gap: 15rpx;
}

.position-input {
  flex: 1;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid transparent;
  cursor: pointer;
}

.color-option.active {
  border-color: #007aff;
  transform: scale(1.1);
}

/* 水印预览 */
.watermark-preview {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-top: 15rpx;
}

/* 结果区域 */
.result-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-img {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .control-section {
    flex-direction: column;
  }
  
  .result-actions {
    flex-direction: column;
  }
  
  .type-selector {
    flex-direction: column;
  }
}