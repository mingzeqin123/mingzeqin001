/* 开票页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.label.required::after {
  content: " *";
  color: #ff4757;
}

.input, .textarea {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus, .textarea:focus {
  border-color: #667eea;
  background-color: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.textarea {
  height: 120rpx;
  resize: none;
}

.input-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 选择器样式 */
.picker {
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.custom-content {
  margin-top: 20rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.radio-item:active {
  background-color: #f0f0f0;
}

.radio-text {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}

/* 专票信息区域 */
.section-title {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.sub-form-group {
  margin-bottom: 30rpx;
}

/* 提交按钮 */
.submit-section {
  margin-bottom: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.submit-btn[disabled] {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

/* 历史记录区域 */
.history-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 30rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  padding: 30rpx;
  background-color: #fafafa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.history-item:active {
  background-color: #f0f0f0;
  border-color: #667eea;
}

.history-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
}

.history-amount {
  font-size: 36rpx;
  color: #667eea;
  font-weight: bold;
}

.history-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.history-content {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.history-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fff3cd;
  color: #856404;
}

.status-processing {
  background-color: #d1ecf1;
  color: #0c5460;
}

.status-completed {
  background-color: #d4edda;
  color: #155724;
}

.status-failed {
  background-color: #f8d7da;
  color: #721c24;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.history-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.reissue-btn {
  background-color: #667eea;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-tip {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  background: white;
  border-radius: 20rpx;
}

.loading-text {
  font-size: 30rpx;
  color: #999;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .form-section {
    padding: 30rpx;
  }
  
  .page-title {
    font-size: 42rpx;
  }
  
  .submit-btn {
    height: 90rpx;
    font-size: 32rpx;
  }
}