/* pages/stats/stats.wxss */
.stats-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}

.content {
  padding-bottom: 120rpx;
}

/* 卡片样式 */
.overview-card, .trend-card, .page-list-card, .ranking-card, .daily-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 10rpx;
}

/* 总体统计网格 */
.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 标签页 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f8f8;
  transition: all 0.3s;
}

.tab-item.active {
  background: #007aff;
  color: white;
}

/* 趋势图表 */
.trend-chart {
  display: flex;
  justify-content: space-between;
  align-items: end;
  height: 200rpx;
  padding: 20rpx 0;
}

.trend-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 5rpx;
}

.trend-bar {
  width: 20rpx;
  height: 120rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  position: relative;
  margin-bottom: 10rpx;
}

.bar-fill {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: linear-gradient(to top, #007aff, #5ac8fa);
  border-radius: 10rpx;
  transition: height 0.3s;
}

.trend-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.trend-value {
  font-size: 22rpx;
  color: #333;
  font-weight: bold;
}

/* 页面列表 */
.page-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-item:last-child {
  border-bottom: none;
}

.page-info {
  flex: 1;
}

.page-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.page-path {
  font-size: 22rpx;
  color: #999;
}

.page-stats {
  text-align: right;
}

.page-pv, .page-uv {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

/* 排行榜 */
.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #007aff;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.ranking-info {
  flex: 1;
}

.ranking-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.ranking-path {
  font-size: 22rpx;
  color: #999;
}

.ranking-stats {
  text-align: right;
}

.ranking-pv, .ranking-uv {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

/* 日统计 */
.date-picker {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.picker-text {
  flex: 1;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.query-btn {
  margin-left: 20rpx;
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
}

.daily-trend {
  margin-top: 30rpx;
}

.trend-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.daily-list {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.daily-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.daily-item:last-child {
  border-bottom: none;
}

.daily-date {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.daily-pv, .daily-uv {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.refresh-btn {
  background: #34c759;
  color: white;
}

.export-btn {
  background: #ff9500;
  color: white;
}

.clear-btn {
  background: #ff3b30;
  color: white;
}